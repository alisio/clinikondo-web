rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Função helper para verificar autenticação
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Documentos dos usuários
    match /users/{userId}/documents/{allPaths=**} {
      // Somente o próprio usuário pode ler/escrever seus documentos
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Avatares/fotos de perfil (opcional)
    match /users/{userId}/profile/{allPaths=**} {
      allow read: if true; // Público
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Negar acesso a qualquer outro caminho
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
